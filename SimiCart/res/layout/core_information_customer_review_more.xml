<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/size_10" 
    android:background="#FFFFFF">

    <RatingBar
        android:id="@+id/rtb_review"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_10" />

    <TextView
        android:id="@+id/tv_reviewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_10"
        android:text="Title"
        android:textSize="@dimen/size_14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_reviewContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_20"
        android:ellipsize="end"
        android:text="Content short"
        android:textSize="@dimen/size_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_reviewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_5"
            android:text="2007-08-26 16:02:56"
            android:textSize="@dimen/size_12" />

        <TextView
            android:id="@+id/tv_nameReviewCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By Susan"
            android:textSize="@dimen/size_12" />
    </LinearLayout>

</LinearLayout>