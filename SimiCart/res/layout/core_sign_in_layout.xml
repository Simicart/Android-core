<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coreSignInLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_40" />

    <LinearLayout
        android:id="@+id/ll_form_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_10" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:layout_marginBottom="@dimen/size_20"
            android:background="@drawable/background_signin"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_email"
                android:layout_width="@dimen/size_25"
                android:layout_height="@dimen/size_25"
                android:layout_marginBottom="@dimen/size_7"
                android:layout_marginLeft="@dimen/size_2"
                android:layout_marginRight="@dimen/size_3"
                android:layout_marginTop="@dimen/size_7"
                android:src="@drawable/ic_your_acc" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="20"
                android:inputType="textEmailAddress"
                android:padding="@dimen/size_7" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:background="@drawable/background_signin"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_pass"
                android:layout_width="@dimen/size_25"
                android:layout_height="@dimen/size_25"
                android:layout_marginBottom="@dimen/size_7"
                android:layout_marginLeft="@dimen/size_2"
                android:layout_marginRight="@dimen/size_3"
                android:layout_marginTop="@dimen/size_7"
                android:src="@drawable/ic_your_pas" />

            <EditText
                android:id="@+id/et_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_forgot_pass"
                android:layout_toRightOf="@+id/iv_pass"
                android:background="@null"
                android:ems="10"
                android:inputType="textPassword"
                android:padding="@dimen/size_7" >
            </EditText>

            <ImageView
                android:id="@+id/iv_forgot_pass"
                android:layout_width="@dimen/size_5"
                android:layout_height="@dimen/size_5"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/size_7"
                android:layout_marginLeft="@dimen/size_3"
                android:layout_marginTop="@dimen/size_7"
                android:src="@drawable/ic_forgot_pass" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/View02"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_5" />

    <CheckBox
        android:id="@+id/cb_re_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_2"
        android:gravity="center_vertical|start" />

    <View
        android:id="@+id/View01"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_20" />

    <TextView
        android:id="@+id/lable_signIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_15" />

    <RelativeLayout
        android:id="@+id/rel_other_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_5"
        android:paddingRight="@dimen/size_3"
         >

        <com.simicart.core.material.ButtonRectangle
            android:id="@+id/bt_signIn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_button"
            android:text="" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_5"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginRight="@dimen/size_10" >

        <TextView
            android:id="@+id/lable_createAccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/size_2"
            android:layout_marginLeft="@dimen/size_1"
            android:layout_marginTop="@dimen/size_2"
            android:background="@drawable/background_signin"
            android:gravity="center"
            android:text="xxx"
            android:textSize="@dimen/text_15" />
    </RelativeLayout>

</LinearLayout>