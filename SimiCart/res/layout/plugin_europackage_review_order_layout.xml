<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.simicart.core.style.CustomScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/size_43"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical" >
				
               	 <LinearLayout
                    android:id="@+id/ll_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_20"
                    android:orientation="vertical" >
                </LinearLayout>
                
                <!-- shipping method -->
               	 
                <RelativeLayout
                    android:id="@+id/shipping_method_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_5"
                    android:layout_marginTop="@dimen/size_5"
                    android:background="@drawable/core_review_line_border" >

                    <ImageView
                        android:id="@+id/ic_expand"
                        android:layout_width="@dimen/size_10"
                        android:layout_height="@dimen/size_10"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_marginRight="@dimen/size_10"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_down" />

                    <TextView
                        android:id="@+id/shipping_methods"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/ic_expand"
                        android:paddingBottom="@dimen/size_10"
                        android:paddingLeft="@dimen/size_5"
                        android:paddingRight="@dimen/size_10"
                        android:paddingTop="@dimen/size_10"
                        android:singleLine="true"
                        android:textSize="@dimen/text_16"
                        android:textStyle="bold" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_shipping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/size_10"
                    android:visibility="gone" >
                </LinearLayout>
                
                    <!-- payment -->
                    
                <RelativeLayout
                    android:id="@+id/payment_method_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_5"
                    android:background="@drawable/core_review_line_border" >

                    <ImageView
                        android:id="@+id/ic_expand_payment"
                        android:layout_width="@dimen/size_10"
                        android:layout_height="@dimen/size_10"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_marginRight="@dimen/size_10"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_down" />

                    <TextView
                        android:id="@+id/tv_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/ic_expand_payment"
                        android:paddingBottom="@dimen/size_10"
                        android:paddingLeft="@dimen/size_5"
                        android:paddingRight="@dimen/size_10"
                        android:paddingTop="@dimen/size_10"
                        android:singleLine="true"
                        android:textSize="@dimen/text_16"
                        android:textStyle="bold" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/size_10"
                    android:visibility="gone" >
                </LinearLayout>
                
                
                <TextView
                    android:id="@+id/tv_billing_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/core_review_line_border"
                    android:paddingBottom="@dimen/size_10"
                    android:paddingLeft="@dimen/size_5"
                    android:paddingRight="@dimen/size_10"
                    android:paddingTop="@dimen/size_10"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ll_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/billing_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" >

                        <!-- Billing address -->

                        <ImageView
                            android:id="@+id/img_edit_b_address"
                            android:layout_width="@dimen/size_20"
                            android:layout_height="@dimen/size_20"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="@dimen/size_10"
                            android:layout_marginTop="@dimen/size_10"
                            android:contentDescription="@null" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/size_30"
                            android:orientation="vertical"
                            android:padding="@dimen/size_10" >

                            <!-- billing name -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <ImageView
                                    android:id="@+id/img_b_name"
                                    android:layout_width="@dimen/size_20"
                                    android:layout_height="@dimen/size_20"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/size_3"
                                    android:contentDescription="@null" />

                                <TextView
                                    android:id="@+id/tv_b_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:padding="@dimen/size_2"
                                    android:textSize="@dimen/text_14" />
                            </LinearLayout>
                            <!-- billing street -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/size_3"
                                android:orientation="horizontal" >

                                <ImageView
                                    android:id="@+id/img_b_street"
                                    android:layout_width="@dimen/size_20"
                                    android:layout_height="@dimen/size_20"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/size_3"
                                    android:contentDescription="@null" />

                                <TextView
                                    android:id="@+id/tv_b_street"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="@dimen/text_14" />
                            </LinearLayout>

                            <!-- billing phone -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/size_3"
                                android:orientation="horizontal" >

                                <ImageView
                                    android:id="@+id/img_b_phone"
                                    android:layout_width="@dimen/size_20"
                                    android:layout_height="@dimen/size_20"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/size_3"
                                    android:contentDescription="@null" />

                                <TextView
                                    android:id="@+id/tv_b_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="@dimen/text_14" />
                            </LinearLayout>

                            <!-- billing email -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/size_3"
                                android:orientation="horizontal" >

                                <ImageView
                                    android:id="@+id/img_b_email"
                                    android:layout_width="@dimen/size_20"
                                    android:layout_height="@dimen/size_20"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/size_3"
                                    android:contentDescription="@null" />

                                <TextView
                                    android:id="@+id/tv_b_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="@dimen/text_14" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <!-- Shipping address -->

                    <TextView
                        android:id="@+id/tv_shipping_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/core_review_line_border"
                        android:paddingBottom="@dimen/size_10"
                        android:paddingLeft="@dimen/size_5"
                        android:paddingRight="@dimen/size_10"
                        android:paddingTop="@dimen/size_10"
                        android:textSize="@dimen/text_16"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/shipping_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" >

                        <ImageView
                            android:id="@+id/img_edit_s_address"
                            android:layout_width="@dimen/size_20"
                            android:layout_height="@dimen/size_20"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="@dimen/size_10"
                            android:layout_marginTop="@dimen/size_10"
                            android:contentDescription="@null" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/size_30"
                            android:orientation="vertical"
                            android:padding="@dimen/size_10" >

                            <!-- shipping name -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/size_3"
                                android:orientation="horizontal" >

                                <ImageView
                                    android:id="@+id/img_s_name"
                                    android:layout_width="@dimen/size_20"
                                    android:layout_height="@dimen/size_20"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/size_3"
                                    android:contentDescription="@null" />

                                <TextView
                                    android:id="@+id/tv_s_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="@dimen/text_14" />
                            </LinearLayout>

                            <!-- shipping street -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/size_3"
                                android:orientation="horizontal" >

                                <ImageView
                                    android:id="@+id/img_s_street"
                                    android:layout_width="@dimen/size_20"
                                    android:layout_height="@dimen/size_20"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/size_3"
                                    android:contentDescription="@null" />

                                <TextView
                                    android:id="@+id/tv_s_street"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="@dimen/text_14" />
                            </LinearLayout>

                            <!-- shipping phone -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/size_3"
                                android:orientation="horizontal" >

                                <ImageView
                                    android:id="@+id/img_s_phone"
                                    android:layout_width="@dimen/size_20"
                                    android:layout_height="@dimen/size_20"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/size_3"
                                    android:contentDescription="@null" />

                                <TextView
                                    android:id="@+id/tv_s_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="@dimen/text_14" />
                            </LinearLayout>

                            <!-- shipping email -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/size_3"
                                android:orientation="horizontal" >

                                <ImageView
                                    android:id="@+id/img_s_email"
                                    android:layout_width="@dimen/size_20"
                                    android:layout_height="@dimen/size_20"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/size_3"
                                    android:contentDescription="@null" />

                                <TextView
                                    android:id="@+id/tv_s_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="@dimen/text_14" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rlt_layout_reward_revieworder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </RelativeLayout>

                <!-- Shipment details -->

                <TextView
                    android:id="@+id/tv_shipment_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/core_review_line_border"
                    android:paddingBottom="@dimen/size_10"
                    android:paddingLeft="@dimen/size_5"
                    android:paddingRight="@dimen/size_10"
                    android:paddingTop="@dimen/size_10"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold" />

                <com.simicart.core.style.NoScrollListView
                    android:id="@+id/review_product_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:clickable="false"
                    android:divider="#e8e8e8"
                    android:dividerHeight="@dimen/size_02"
                    android:focusable="false"
                    android:listSelector="#FFFFFF" >
                </com.simicart.core.style.NoScrollListView>

                <!-- fee detail -->

                <TextView
                    android:id="@+id/tv_feeDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/core_review_line_border"
                    android:paddingBottom="@dimen/size_10"
                    android:paddingLeft="@dimen/size_5"
                    android:paddingRight="@dimen/size_10"
                    android:paddingTop="@dimen/size_10"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_02"
                    android:background="#e8e8e8" />

                <LinearLayout
                    android:id="@+id/ll_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/size_5"
                    android:orientation="vertical" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_02"
                    android:background="#e8e8e8" />

                <View
                    android:id="@+id/view_temp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_20" />

                <!-- coupon code -->

                <EditText
                    android:id="@+id/edt_counponCode"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_40"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/size_20"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_marginRight="@dimen/size_10"
                    android:background="@drawable/core_coupon_line_border"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:padding="@dimen/size_10"
                    android:textSize="@dimen/text_15" />

                <!-- confirm -->

            </LinearLayout>
        </RelativeLayout>
    </com.simicart.core.style.CustomScrollView>

    <!-- place now -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:paddingLeft="@dimen/size_2"
        >

        <com.simicart.core.material.ButtonRectangle
            android:id="@+id/bt_placenow2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_button"
            android:text="" />
    </RelativeLayout>

</RelativeLayout>