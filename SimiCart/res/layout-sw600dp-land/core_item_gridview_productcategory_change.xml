<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- Image for avartar -->

    <RelativeLayout
        android:id="@+id/layout_header_grid"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40"
        android:background="@android:color/transparent"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rel_product_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/text_13"
        android:layout_marginRight="@dimen/text_13"
        android:background="@drawable/core_border_imagegrid" >

        <ImageView
            android:id="@+id/img_avartar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/default_logo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/core_grid_background_listproduct" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:rotation="-45" >

            <LinearLayout
                android:id="@+id/layout_stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_130"
                android:background="#915c83"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_out_stock"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_13"
                    android:gravity="center"
                    android:text="Out Stock"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_12" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <!-- name product -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#90ffffff"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_13"
            android:layout_weight="6"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="center_vertical|center_horizontal"
            android:lines="1"
            android:paddingBottom="@dimen/size_2"
            android:paddingLeft="@dimen/text_13"
            android:paddingRight="@dimen/text_13"
            android:text="NOKIA 11100C 12Gb"
            android:textSize="@dimen/text_13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_excl"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_20"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="123.00"
                android:textColor="#0d0c0c"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_incl"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_20"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_20"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="123.00"
                android:textColor="#0d0c0c"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>