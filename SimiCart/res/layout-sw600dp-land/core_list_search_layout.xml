<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_list_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <ListView
        android:id="@+id/lv_list_search"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/text_13"
        android:background="#ffffff"
        android:scrollbars="none"
        android:visibility="visible" >
    </ListView>

    <GridView
        android:id="@+id/grv_product"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:horizontalSpacing="@dimen/text_13"
        android:numColumns="auto_fit"
        android:paddingTop="@dimen/text_13"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/text_13"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/menu_bottom_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#CCffffff"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/ll_to_filter"
            android:layout_width="@dimen/size_80"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:padding="@dimen/size_2" >
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_totalitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="items"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/ll_to_sort"
            android:layout_width="@dimen/size_80"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:padding="@dimen/size_2" >

            <ImageView
                android:id="@+id/img_sort"
                android:layout_width="@dimen/text_13"
                android:layout_height="@dimen/text_13"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/size_2"
                android:src="@drawable/icon_sort" />
        </RelativeLayout>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar_load"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40"
        android:layout_above="@+id/menu_bottom_search"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:indeterminateDrawable="@drawable/progressbar_indeterminate"
        android:visibility="visible" />

</RelativeLayout>