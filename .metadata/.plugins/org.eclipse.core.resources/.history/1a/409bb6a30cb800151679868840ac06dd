    android:shape="rectangle" >

    <!-- Set màu nền -->

    <solid android:color="#FFFFFF" >
    </solid>

    <!-- đặt thuộc tính màu và độ rộng của đường viền -->

    <stroke
        android:width="1dp"
        android:color="#CACACA" >
    </stroke>

    <!-- các thuộc tính căn chỉnh -->

    <padding
        android:bottom="0.@dimen/size_5"
        android:left="0.@dimen/size_5"
        android:right="0.@dimen/size_5"
        android:top="0.@dimen/size_5" >
    </padding>

    <!-- và đây là bán kính đường tròn ở 4 góc -->

    <corners android:radius="6dp" >
    </corners>

